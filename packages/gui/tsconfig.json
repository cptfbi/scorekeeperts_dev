{
  "extends": "../tscommon.json",
  "compilerOptions": {
    "target": "es2019", // vue2 = webpack4 = no optional chaining, use target limit to convert as needed for gui for now
    "baseUrl": ".",
    "outDir": "tsbuild",
    "paths": { "@/*": ["src/*"] },
    "types": [ "webpack-env", "vuetify" ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/components/*.js"
  ]
}
